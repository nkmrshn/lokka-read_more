%h2= t.read_more
%form{:action => '/admin/plugins/read_more', :method => 'post'}
  %input{:type => 'hidden', :name => '_method', :value => 'put'}
  .field
    %label{:for => 'delimiter'}= t.read_more_delimiter
    %br
    %input{:type => 'text', :id => 'delimiter', :name => 'delimiter', :value => Option.read_more_delimiter || "----"}
  .field
    %label{:for => 'text'}= t.read_more_text
    %br
    %input{:type => 'text', :id => 'text', :name => 'text', :value => Option.read_more_text || t.read_more}
  .field
    %label{:for => 'class'}= t.read_more_class
    %br
    %input{:type => 'text', :id => 'class', :name => 'class', :value => Option.read_more_class}
  .field
    %input{:type => 'submit', :value => t.edit}
